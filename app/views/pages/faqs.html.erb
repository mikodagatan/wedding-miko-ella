<div class="w-full pt-[50px] flex flex-col items-center justify-center pb-[50px]" data-controller="faq">
  <h1 class='text-4xl font-main font-bold'>Frequently Asked Questions (FAQs)</h1>
  <div class="gap-8 pt-12 font-main flex flex-col gap-[60px] justify-center items-center">
    <% @faqs.each do |faq| %>
      <div class="flex flex-col gap-4 justify-center items-center">
        <h1 class="text-2xl select-none font-bold">
          <%= faq[:question] %>
        </h1>
        <p id="answer-1" class="text-lg w-[600px] text-center">
          <%= faq[:answer] %>
        </p>
      </div>
    <% end %>
  </div>
</div> 
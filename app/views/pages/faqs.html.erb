<div class="w-full flex flex-col lg:items-center lg:justify-center relative" data-controller="faq">
  <%= image_tag 'faq_border.png', class: 'hidden lg:block' %>
  <%= image_tag 'faq_border2.png', class: 'hidden lg:block' %>
  <%= image_tag 'faq_border.png', class: 'hidden lg:block' %>
  <div class="lg:absolute lg:top-16  lg:left-[50%] lg:-translate-x-[50%] py-[50px] px-4 lg:px-0 ">
      <h1 class='text-[24px] text-center lg:text-left lg:text-4xl font-main font-bold'>Frequently Asked Questions (FAQs)</h1>
    <div class="gap-8 pt-12 font-main flex flex-col gap-[60px] lg:justify-center lg:items-center">
      <% @faqs.each do |faq| %>
        <div class="flex flex-col gap-4 justify-center items-center">
          <h1 class="text-lg lg:text-2xl select-none font-bold text-center lg:text-left">
            <%= faq[:question] %>
          </h1>
          <p id="answer-1" class="text-md lg:text-lg lg:w-[600px] text-center">
            <%= faq[:answer].html_safe %>
          </p>
          <% if faq[:add_qr] %>
          <div class='flex flex-col gap-2 font-main justify-center items-center'>
            <%= link_to "https://docs.google.com/forms/d/e/1FAIpQLSdCGNuBJBbVMcxWTN4c5Mt6SjRRyRiOcepBu1ZxvzGKo51uqQ/viewform?usp=dialog" do %>
              <%= image_tag 'qr_code.png', class: 'h-[200px] w-[200px]' %>
            <% end %>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
  